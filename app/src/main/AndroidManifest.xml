        <activity android:name=".RecuperarPassword" />
        <activity
            android:name=".MenuUser2"
            android:label="@string/title_activity_menu_user2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PerfilUSer"></activity>
